import numpy as np
import matplotlib.pyplot as plt

n_sample = 200
x = np.random.randn(n_sample)
w=2
b=3
y=w*x + b + np.random.randn(n_sample)
plt.scatter(x,y,s=10)

from sklearn.linear_model import LinearRegression
leg = LinearRegression()
leg.fit(x.reshape(-1,1),y)  #leg라는 함수를 만들고 거기에 fit문법을 사용한다. 그전에 reshape로 이차원으로 바꿔준다.reshape(-1,1)

print(leg.coef_)
print(leg.intercept_)

import pandas as pd
num_1 = 200
x1 = np.random.randn(num_1)
x2 = np.random.randn(num_1)

y = 2*x1 + 3*x2

leg = LinearRegression()
X = pd.DataFrame({'x1':x1, 'x2':x2})
leg.fit(X, y)

print(leg.coef_)
print(leg.intercept_)
display(X)
